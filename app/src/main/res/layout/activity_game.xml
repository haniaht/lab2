<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3AAFDD9"
    tools:context=".game">

    <ImageView
        android:id="@+id/game_image"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:layout_marginTop="103dp"
        android:layout_marginBottom="20dp"
        android:onClick="imageclicked"
        app:layout_constraintBottom_toTopOf="@+id/game_1TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice4" />

    <TextView
        android:id="@+id/game_2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="2:0"
        app:layout_constraintBottom_toTopOf="@+id/game_3TV"
        app:layout_constraintStart_toStartOf="@+id/game_1TV"
        app:layout_constraintTop_toBottomOf="@+id/game_1TV" />

    <TextView
        android:id="@+id/game_3TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="42dp"
        android:text="3:0"
        app:layout_constraintBottom_toTopOf="@+id/game_4TV"
        app:layout_constraintEnd_toEndOf="@+id/game_2TV"
        app:layout_constraintTop_toBottomOf="@+id/game_2TV" />

    <TextView
        android:id="@+id/game_4TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="4:0"
        app:layout_constraintBottom_toTopOf="@+id/game_5TV"
        app:layout_constraintStart_toStartOf="@+id/game_5TV"
        app:layout_constraintTop_toBottomOf="@+id/game_3TV" />

    <TextView
        android:id="@+id/game_5TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="5:0"
        app:layout_constraintBottom_toTopOf="@+id/game_6TV"
        app:layout_constraintStart_toStartOf="@+id/game_6TV"
        app:layout_constraintTop_toBottomOf="@+id/game_4TV" />

    <TextView
        android:id="@+id/game_6TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="32dp"
        android:text="6:0"
        app:layout_constraintBottom_toTopOf="@+id/game_resertBTN"
        app:layout_constraintStart_toStartOf="@+id/game_resertBTN"
        app:layout_constraintTop_toBottomOf="@+id/game_5TV" />

    <TextView
        android:id="@+id/game_1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="1:0"
        app:layout_constraintBottom_toTopOf="@+id/game_2TV"
        app:layout_constraintEnd_toEndOf="@+id/game_4TV"
        app:layout_constraintStart_toStartOf="@+id/game_4TV"
        app:layout_constraintTop_toBottomOf="@+id/game_image" />

    <Button
        android:id="@+id/game_resertBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="resetClicked"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_6TV" />
</androidx.constraintlayout.widget.ConstraintLayout>